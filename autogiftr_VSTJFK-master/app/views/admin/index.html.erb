<h1>AUTO GIFTR by VSTJFK</h1>

<div class="row">
	<div class="col-md-4">
		<div class="panel panel-info">
			<div class="panel-heading">
				<p class="panel-title">Gifts</p>
			</div>
			<div class="panel-body">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>Price</th>
						</tr>
					</thead>
					<tbody>
						<% @gifts.each do |gift| %>
							<tr>
								<td><%= gift.name %></td>
								<td><%= gift.price %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<%= link_to 'Add Gift', new_gift_path, class: 'btn btn-info btn-xs' %>
			</div>
		</div>
	</div>
</div>